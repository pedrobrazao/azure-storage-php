{% extends "base.html.twig" %}

{% block title %}Create Container{% endblock %}

{% block content %}
    <h1>Create Container</h1>

    {% if error %}
    <p class="error">ERROR: {{ error }}</p>
    {% endif %}
    <form method="POST">
    <dl>
    <dt>Container Name</dt>
    <dd>
    <input type="text" name="name" title="Container Name" value="{{ form.name }}">
    </dd>
    <dd>
    <button type="submit">Create</button>
    </dd>
    </dl>
    </form>
{% endblock %}
